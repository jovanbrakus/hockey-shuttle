{
  "version": 2,
  "public": true,
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/src/:path*"
    },
    {
      "source": "/",
      "destination": "/src/pages/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
